{
  "name": "ai-coding-cli",
  "version": "0.1.0",
  "description": "Personal AI coding CLI tool using Mastra AI and OpenRouter for multi-model access",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "my-cli": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.{json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "serena:update": "scripts/update-serena.sh"
  },
  "keywords": [
    "cli",
    "ai",
    "mastra",
    "openrouter",
    "coding-assistant"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@e2b/code-interpreter": "latest",
    "@mastra/chroma": "^0.11.12",
    "@mastra/core": "latest",
    "@mastra/loggers": "latest",
    "@mastra/memory": "latest",
    "@mastra/rag": "^1.3.0",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "ai": "latest",
    "axios": "^1.7.2",
    "chalk": "^5.3.0",
    "chromadb": "^3.0.17",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "dotenv": "^16.4.5",
    "highlight.js": "^11.10.0",
    "inquirer": "^10.2.2",
    "jsdom": "^27.0.0",
    "marked": "^14.1.2",
    "marked-terminal": "^7.1.0",
    "ollama": "^0.6.0",
    "ora": "^8.1.0",
    "turndown": "^7.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/inquirer": "^9.0.7",
    "@types/marked-terminal": "^3.1.3",
    "@types/node": "^20.17.57",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^19.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
